<div class="sell__car--heading">
    <h1> Welcome to Car Lelo </h1>
    <div class="sell__car--heading--content">
      <h5>Sell From Your Home ||&nbsp</h5>
      <h5> Instant Payment ||&nbsp</h5>
      <h5> Free RC Transfer</h5>
    </div>
</div>


<%= form_for @car, url:cars_path do |form| %>
 <%if @car.errors.any?%>
    <div class="alert alert-danger">
      <% @car.errors.full_messages.each do |message|%>
      <div><%=message%></div>
    <%end%>
    </div>
  <%end%>
 <div class="sell__car--content">
      <div class="mx-3 w-0">
          <%= form.label :Your_City%>
          <%= form.text_field :city, class: "form-control"%>
          <div class="form-group">
          <%= form.label :city %>          
          <%= form.collection_select :city, City.all, :name, :name, { prompt: "Please Select" }, { class: "form-control" } %>
        </div>
      </div>
      <div class="mx-3">
          <%= form.label :Brand%>
          <%= form.select(:brand, [ "Maruti", "Hyundai", "Honda", "Mahindra", "Toyota", "Renault", "Ford", "Tata", "BMW", "Volkswagen", "Skoda", "Mercedes-Benz", "MG", "Kia", "Audi", "Chevrolet", "Fiat", "Nissan"],  {prompt: "Select"}, {id: "brand", class: "form-select"}) %>
      </div>
                <div class="form-group">
          <%= form.label :brand %>          
          <%= form.collection_select :brand, Brand.all, :name, :name, { prompt: "Please Select" }, { class: "form-control" } %>
        </div>
      <div class="mx-3">
        <%= form.label :Model%>
        <%= form.select(:model, [], {prompt: "Choose model"},{id: "model", class: "form-select"})%>
      </div>
      <div class="mx-3">
        <%= form.label :Year%>
        <%= form.select(:year, [2022, 2021, 2020, 2019, 2018, 2017, 2016, 2015, 2014, 2013, 2012, 2011, 2010, 2009, 2008, 2007, 2006, 2005, 2004, 2003, 2002, 2001, 2000],{}, {class: "form-select"})%>
      </div>
      <div class="form-group mx-3">
        <%= form.label :Variant%>
        <%= form.select(:variant, ["Petrol", "Disel", "CNG"], {},{class: "form-select"})%>
      </div>
      <div class="mx-3">
        <%= form.label :State%>
        <%= form.select(:state, ["AP", "AR", "AS", "BR", "DN", "DD", "GA", "HJ", "HR", "HP", "JK", "KA", "KL", "MP", "MH", "MZ", "NL", "OD", "PB", "RJ", "SK", "TN", "TS", "TR", "UP", "UK", "WB", "AN", "CH", "DM", "DD", "DL", "LA", "LD", "PY"], {}, {class: 'form-select' })%>
      </div>
      <div class="mx-3 ">
        <%= form.label :Kms_Driven%>
        <%= form.select(:km, ["Upto 10000 Km", "10,000 - 20,000 Km", "20,000 - 40,000 Km", "40,000 - 70,000 Km", "70,000 - 1,00,000 Km", "1,00,000 - 1,20,000 Km", "Above 1,20,000 Km"], {}, {class: 'form-select' })%>
      </div>
    </div>
      <div class="d-flex align-items-center justify-content-center mt-3">
        <%= form.submit "Schedule appointment", class:"btn btn-primary"%>
      </div>
    </div>
<% end %>

<%= javascript_pack_tag 'form' %>
