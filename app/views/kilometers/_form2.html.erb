<div class="mb-4">
  <%= form_for @kilometer do |form| %>
    <%= render partial: "shared/error_messages", locals: { var: @kilometer } %>
      <%= form.label :Name_of_range%>
      <%= form.text_field :name, class: "form-control mb-3"%>
      <%= form.label :starting_km_range%>
      <%= form.text_field :km_start, class: "form-control mb-3"%>
      <%= form.label :ending_km_range%>
      <%= form.text_field :km_end, class: "form-control mb-3"%>
      <div class="d-flex align-items-center justify-content-center mt-3">
          <%= form.submit message, class: "btn btn-success" do %>
          <i class="bi bi-caret-right-fill"></i>
          <%end%>
      </div>
  <%end%>
</div>
<div class="button__details--bottom">
    <div class="button__details--bottom--buttons">
        <%= link_to kilometers_path, class: "btn btn-info" do %>
            <i class="bi bi-caret-left-fill"></i>Back
        <%end%>
</div>
 