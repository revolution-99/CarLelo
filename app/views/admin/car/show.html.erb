<div class="d-flex flex-column align-items-center justify-content-center mb-3">
    <h1> EDIT CAR DETAILS </h1>
</div>
<%= form_for @current_car, url:admin_update_car_path do |form| %>
    <%if @current_car.errors.any?%>
        <div class="alert alert-danger">
            <% @current_car.errors.full_messages.each do |message|%>
                <div><%=message%></div>
            <%end%>
        </div>
    <%end%>
    <div class="table--wrap">
        <table class="table table-striped">
            <thead>
                <tr class="table-dark">
                <th scope="col">Car ID</th>
                <th scope="col">City</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Variant</th>
                <th scope="col">State</th>
                <th scope="col">KMs Driven</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope = "row">
                        <%= form.text_field :id, class: "form-control"%>
                    </td>
                    <td>
                        <%= form.text_field :city, class: "form-control"%>
                    </td>
                    <td>
                        <%= form.text_field :brand, class: "form-control"%>
                    </td>
                    <td>
                        <%= form.text_field :model, class: "form-control"%>
                    </td>
                    <td>
                        <%= form.select(:year, [2022, 2021, 2020, 2019, 2018, 2017, 2016, 2015, 2014, 2013, 2012, 2011, 2010, 2009, 2008, 2007, 2006, 2005, 2004, 2003, 2002, 2001, 2000],{}, {class: "form-select"})%>
                    </td>
                    <td>
                        <%= form.select(:variant, ["Petrol", "Disel", "CNG"], {},{class: "form-select"})%>
                    </td>
                    <td>
                        <%= form.select(:state, ["AP", "AR", "AS", "BR", "DN", "DD", "GA", "HJ", "HR", "HP", "JK", "KA", "KL", "MP", "MH", "MZ", "NL", "OD", "PB", "RJ", "SK", "TN", "TS", "TR", "UP", "UK", "WB", "AN", "CH", "DM", "DD", "DL", "LA", "LD", "PY"], {}, {class: 'form-select' })%>
                    </td>
                    <td>
                        <%= form.select(:km, ["Upto 10000 Km", "10,000 - 20,000 K m", "20,000 - 40,000 Km", "40,000 - 70,000 Km", "70,000 - 1,00,000 Km", "1,00,000 - 1,20,000 Km", "Above 1,20,000 Km"], {}, {class: 'form-select' })%>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="table--wrap--button" >
            <%= form.submit "Update", class: "btn btn-success"%>
        </div>
    </div>
<% end %>
<div class="table--wrap--button">
    <%= button_to "Back", admin_dashboard_path, class: "btn btn-info", method: :get %>
    <%= button_to "Delete", admin_delete_car_path(@current_car.id), class: "btn btn-danger", method: :delete%>
</div>
