<div class="d-flex flex-column align-items-center justify-content-center mb-3">
    <h1> Welcome to Car Lelo </h1>
    <h5>
    Sell From Your Home || Instant Payment || Free RC Transfer
</h5>
</div>

<%= form_for @car, url:sell_used_car_path do |form| %>
 <%if @car.errors.any?%>
    <div class="alert alert-danger">
      <% @car.errors.full_messages.each do |message|%>
      <div><%=message%></div>
    <%end%>
    </div>
  <%end%>
 <div class="d-flex align-items-center justify-content-center">
      <div class="mx-3 w-0">
          <%= form.label :Your_City%>
          <%= form.text_field :city,  placeholder: "Cuttack", class: "form-control"%>
      </div>
      <div class="mx-3">
          <%= form.label :Brand%>
          <%= form.text_field :brand, class: "form-control"%>
      </div>
      <div class="mx-3">
        <%= form.label :Model%>
        <%= form.text_field :model, class: "form-control"%>
      </div>
      <div class="mx-3">
        <%= form.label :Year%>
        <%= form.select(:year, [2022, 2021, 2020, 2019, 2018, 2017, 2016, 2015, 2014, 2013, 2012, 2011, 2010, 2009, 2008, 2007, 2006, 2005, 2004, 2003, 2002, 2001, 2000],{}, {class: "form-select"})%>
      </div>
      <div class="form-group mx-3">
        <%= form.label :Variant%>
        <%= form.select(:variant, ["Petrol", "Disel", "CNG"], {},{class: "form-select"})%>
      </div>
      <div class="mx-3">
        <%= form.label :State%>
        <%= form.select(:state, ["AP", "AR", "AS", "BR", "DN", "DD", "GA", "HJ", "HR", "HP", "JK", "KA", "KL", "MP", "MH", "MZ", "NL", "OD", "PB", "RJ", "SK", "TN", "TS", "TR", "UP", "UK", "WB", "AN", "CH", "DM", "DD", "DL", "LA", "LD", "PY"], {}, {class: 'form-select' })%>
      </div>
      <div class="mx-3 ">
        <%= form.label :Kms_Driven%>
        <%= form.select(:km, ["Upto 10000 Km", "10,000 - 20,000 K m", "20,000 - 40,000 Km", "40,000 - 70,000 Km", "70,000 - 1,00,000 Km", "1,00,000 - 1,20,000 Km", "Above 1,20,000 Km"], {}, {class: 'form-select' })%>
      </div>
      <div class="mx-3">
        <%= form.label :Mobile_No%>
        <%= form.text_field :mobile_no, class: "form-control"%>
      </div>
    </div>
      <div class="d-flex align-items-center justify-content-center mt-3">
        <%= form.submit "Get Car Price", class:"btn btn-primary"%>
      </div>
<% end %>