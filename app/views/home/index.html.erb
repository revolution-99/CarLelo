<div class="d-flex flex-column align-items-center justify-content-center">
    <h1> Welcome to Car Lelo </h1>

    <% if current_user%>
        <% if current_user.is_buyer%>
            <%= render partial: "filter" %>
        <%else%>
            <h4 class="mt-2">Get the best price for your car</h4>
            <div class="button__details--bottom mt-3 mb-4">
                <div class="button__details--bottom--buttons">
                    <%= link_to new_car_path, class: "btn btn-info" do %>
                        Sell My Car <i class="bi bi-box-arrow-right"></i>
                    <%end%>
                </div>
            </div>
        <%end%>
        <%if @cars.count == 0%>
            <div class="d-flex flex-column align-items-center justify-content-center">
                <h3> No matching car is found </h3>
            </div>
        <%else%>
            <div class="car--card">
                <% @cars.each do |car| %>
                    <%= link_to car_details_path(car.id) do %>
                        <div class="card" style="width: 18rem;">
                            <%= image_tag "carrr.jpg", class:"card-img-top"%>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= car.year %>

                                    <%= car.brand%>

                                    <%= car.model%>
                                </h5>
                            </div>
                            <ul class="card--body--custom">
                                <li><%= car.state%></li>
                                <li><%= car.city%></li>
                            </ul>
                            <ul class="card--body--custom">
                                <li><%= car.km%></li>
                                <li><%= car.variant%></li>
                            </ul>
                        </div>
                    <%end%>
                <%end%>
            </div>
        <% end %>
    <% else%>
        <%= render partial: "landing" %>
    <% end %> 
</div>
